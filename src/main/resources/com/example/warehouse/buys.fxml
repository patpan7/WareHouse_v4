<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="stackPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.warehouse.BuysController" stylesheets="@external.css">
    <BorderPane minHeight="800.0" minWidth="1200.0">
        <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                <HBox alignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0"/>
                    </VBox.margin>
                    <Label alignment="CENTER" contentDisplay="CENTER" styleClass="normal-label" text="Από">
                        <font>
                            <Font name="System Bold" size="30.0"/>
                        </font>
                        <opaqueInsets>
                            <Insets/>
                        </opaqueInsets>
                        <padding>
                            <Insets right="20.0"/>
                        </padding>
                    </Label>
                    <DatePicker fx:id="dateFrom" prefWidth="200.0"/>
                    <Separator prefWidth="20.0" visible="false"/>
                    <Label alignment="CENTER" contentDisplay="CENTER" styleClass="normal-label" text="Έως">
                        <font>
                            <Font name="System Bold" size="30.0"/>
                        </font>
                        <opaqueInsets>
                            <Insets/>
                        </opaqueInsets>
                        <padding>
                            <Insets right="20.0"/>
                        </padding>
                    </Label>
                    <DatePicker fx:id="dateTo" prefWidth="200.0"/>
                    <Separator visible="false" HBox.hgrow="ALWAYS"/>
                    <Button mnemonicParsing="false" onAction="#buyAddNew" styleClass="click-button"
                            text="Νέα Αγορά">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true"
                                       preserveRatio="true">
                                <Image url="@icons/add.png"/>
                            </ImageView>
                        </graphic>
                        <opaqueInsets>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </opaqueInsets>
                    </Button>
                </HBox>
                <TableView fx:id="buysTable" prefHeight="698.0" prefWidth="1200.0" VBox.vgrow="ALWAYS">
                    <contextMenu>
                        <ContextMenu>
                            <items>
                                <MenuItem fx:id="editOption" mnemonicParsing="false"
                                          onAction="#handleEditOption" text="Επεξεργασία"/>
                            </items>
                        </ContextMenu>
                    </contextMenu>
                </TableView>
            </VBox>
        </center>
        <top>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                </BorderPane.margin>
                <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label styleClass="header-label" text="Warehouse v4 - Αγορές" HBox.hgrow="ALWAYS">
                        <font>
                            <Font size="38.0"/>
                        </font>
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </Label>
                </HBox>
                <HBox alignment="CENTER_RIGHT">
                    <opaqueInsets>
                        <Insets right="20.0"/>
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <Button mnemonicParsing="false" onAction="#mainMenuClick" styleClass="click-button"
                            text="Επιστροφή">
                        <graphic>
                            <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true"
                                       preserveRatio="true">
                                <Image url="@icons/menu.png"/>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </Button>
                </HBox>
            </HBox>
        </top>
    </BorderPane>
</StackPane>
