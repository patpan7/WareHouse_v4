<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.StackPane?>
<StackPane fx:id="stackPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.warehouse.NewDistributionController">
    <children>
        <BorderPane minHeight="800.0" minWidth="1200.0" stylesheets="@external.css">
            <top>
                <AnchorPane BorderPane.alignment="CENTER">
                    <children>
                        <Label layoutX="334.0" layoutY="11.0" styleClass="header-label"
                               text="Warehouse v4 - Νεα Διακίνηση" AnchorPane.leftAnchor="150.0"
                               AnchorPane.topAnchor="10.0">
                            <font>
                                <Font size="38.0"/>
                            </font>
                        </Label>
                        <Button layoutX="973.0" layoutY="2.0" mnemonicParsing="false" onAction="#mainMenuClick"
                                styleClass="click-button" text="Επιστροφή" AnchorPane.rightAnchor="20.0"
                                AnchorPane.topAnchor="10.0">
                            <graphic>
                                <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@icons/menu.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                    <BorderPane.margin>
                        <Insets bottom="10.0"/>
                    </BorderPane.margin>
                </AnchorPane>
            </top>
            <center>
                <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                    <children>
                        <GridPane alignment="CENTER">
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"
                                                   prefWidth="100.0"/>
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"
                                                   prefWidth="100.0"/>
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"
                                                   prefWidth="100.0"/>
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"
                                                   prefWidth="100.0"/>
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"
                                                   prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Button mnemonicParsing="false" onAction="#addRow" styleClass="click-button"
                                        text="Προσθήκη" GridPane.columnIndex="4" GridPane.rowIndex="1">
                                    <font>
                                        <Font size="24.0"/>
                                    </font>
                                    <GridPane.margin>
                                        <Insets/>
                                    </GridPane.margin>
                                </Button>
                                <TextField fx:id="tfUnit" alignment="CENTER" editable="false" promptText="Μον. Μέτρησης"
                                           GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <font>
                                        <Font size="24.0"/>
                                    </font>
                                    <GridPane.margin>
                                        <Insets left="10.0" right="10.0"/>
                                    </GridPane.margin>
                                </TextField>
                                <TextField fx:id="tfQuantity" promptText="Ποσότητα" GridPane.columnIndex="3"
                                           GridPane.rowIndex="1">
                                    <font>
                                        <Font size="24.0"/>
                                    </font>
                                    <GridPane.margin>
                                        <Insets left="10.0" right="10.0"/>
                                    </GridPane.margin>
                                </TextField>
                                <TextField fx:id="tfName" prefHeight="51.0" promptText="Είδος"
                                           stylesheets="@external.css" GridPane.rowIndex="1">
                                    <GridPane.margin>
                                        <Insets left="10.0" right="10.0"/>
                                    </GridPane.margin>
                                    <font>
                                        <Font size="24.0"/>
                                    </font>
                                    <styleClass>
                                        <String fx:value="auto-complete-popup"/>
                                        <String fx:value="text-field"/>
                                    </styleClass>
                                </TextField>
                                <DatePicker fx:id="tfDate" GridPane.columnIndex="1">
                                    <GridPane.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0"/>
                                    </GridPane.margin>
                                </DatePicker>
                                <ComboBox fx:id="tfDepartment" prefWidth="280.0" promptText="Τμήμα">
                                    <GridPane.margin>
                                        <Insets left="10.0" right="10.0"/>
                                    </GridPane.margin>
                                </ComboBox>
                                <TextField fx:id="tfTotalQuantity" promptText="Διαθέσημη Ποσότητα"
                                           GridPane.columnIndex="2" GridPane.rowIndex="1">
                                    <font>
                                        <Font size="24.0"/>
                                    </font>
                                    <GridPane.margin>
                                        <Insets left="10.0" right="10.0"/>
                                    </GridPane.margin>
                                </TextField>
                            </children>
                            <VBox.margin>
                                <Insets bottom="10.0"/>
                            </VBox.margin>
                        </GridPane>
                        <TableView fx:id="distributionTable" prefHeight="590.0" prefWidth="1200.0">
                            <VBox.margin>
                                <Insets bottom="10.0"/>
                            </VBox.margin>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                            <contextMenu>
                                <ContextMenu>
                                    <items>
                                        <MenuItem mnemonicParsing="false" onAction="#editRow" text="Επεξεργασία"/>
                                        <MenuItem mnemonicParsing="false" onAction="#deleteRow" text="Διαγραφή"/>
                                    </items>
                                </ContextMenu>
                            </contextMenu>
                        </TableView>
                        <HBox alignment="CENTER"/>
                        <Button mnemonicParsing="false" onAction="#saveAction" styleClass="click-button"
                                text="Αποθήκευση">
                            <font>
                                <Font size="24.0"/>
                            </font>
                            <VBox.margin>
                                <Insets bottom="10.0" top="10.0"/>
                            </VBox.margin>
                        </Button>
                    </children>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <BorderPane.margin>
                        <Insets/>
                    </BorderPane.margin>
                </VBox>
            </center>
        </BorderPane>
    </children>
</StackPane>