<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="borderPane" stylesheets="@external.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.warehouse.ItemsStatistics">
    <center>
        <VBox minHeight="600.0" minWidth="1200.0">
            <VBox>
                <HBox alignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" />
                    </VBox.margin>
                    <Label alignment="CENTER" contentDisplay="CENTER" styleClass="normal-label" text="Αναζήτηση">
                        <font>
                            <Font name="System Bold" size="30.0" />
                        </font>
                        <opaqueInsets>
                            <Insets />
                        </opaqueInsets>
                        <padding>
                            <Insets right="20.0" />
                        </padding>
                    </Label>
                    <TextField fx:id="filterField" prefHeight="45.0" prefWidth="300.0">
                        <opaqueInsets>
                            <Insets />
                        </opaqueInsets>
                    </TextField>
                    <Separator visible="false" HBox.hgrow="ALWAYS" />
                    <Label alignment="CENTER" contentDisplay="CENTER" styleClass="normal-label" text="Κατηγορία">
                        <font>
                            <Font name="System Bold" size="30.0" />
                        </font>
                        <opaqueInsets>
                            <Insets />
                        </opaqueInsets>
                        <padding>
                            <Insets right="20.0" />
                        </padding>
                  <HBox.margin>
                     <Insets />
                  </HBox.margin>
                    </Label>
                    <ComboBox fx:id="categoryFiled" prefHeight="51.0" prefWidth="300.0" />
                </HBox>
            </VBox>
            <TableView fx:id="statisticsTable" stylesheets="@external.css" VBox.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>
