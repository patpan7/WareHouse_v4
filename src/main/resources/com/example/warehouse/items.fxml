<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="stackPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.warehouse.ItemsController">
   <children>
      <BorderPane minHeight="800.0" minWidth="1200.0" stylesheets="@external.css">
          <top>
              <AnchorPane fx:id="code" BorderPane.alignment="CENTER">
                  <children>
                      <Label layoutX="383.0" layoutY="11.0" styleClass="header-label" text="Warehouse v4 - Αποθήκη" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="10.0">
                          <font>
                              <Font size="38.0" />
                          </font>
                      </Label>
                      <Button layoutX="973.0" layoutY="2.0" mnemonicParsing="false" onAction="#mainMenuClick" styleClass="click-button" text="Επιστροφή" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="10.0">
                          <graphic>
                              <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                                  <image>
                                      <Image url="@icons/menu.png" />
                                  </image>
                              </ImageView>
                          </graphic>
                      </Button>
                  </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" />
               </BorderPane.margin>
              </AnchorPane>
          </top>
         <center>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <VBox>
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <Button mnemonicParsing="false" onAction="#itemAddNew" styleClass="click-button" text="Προσθήκη Νέου Είδους">
                                 <graphic>
                                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@icons/add.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </Button>
                              <Separator visible="false" HBox.hgrow="ALWAYS" />
                              <Button mnemonicParsing="false" onAction="#categoryAddNew" styleClass="click-button" text="Προσθήκη Νέας Κατηγορίας">
                                 <graphic>
                                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@icons/add.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </Button>
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" left="20.0" right="20.0" />
                           </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER">
                           <children>
                              <Label alignment="CENTER" contentDisplay="CENTER" styleClass="normal-label" text="Αναζήτηση">
                                 <font>
                                    <Font name="System Bold" size="30.0" />
                                 </font>
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                                 <padding>
                                    <Insets right="20.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="filterField" prefHeight="45.0" prefWidth="450.0">
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                              </TextField>
                              <Separator visible="false" HBox.hgrow="ALWAYS" />
                              <Label alignment="CENTER" contentDisplay="CENTER" styleClass="normal-label" text="Κατηγορία">
                                 <font>
                                    <Font name="System Bold" size="30.0" />
                                 </font>
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                                 <padding>
                                    <Insets right="20.0" />
                                 </padding>
                              </Label>
                              <ComboBox fx:id="categoryFiled" prefHeight="51.0" prefWidth="360.0" />
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" left="20.0" right="20.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
                  <TableView fx:id="itemsTable" stylesheets="@external.css" VBox.vgrow="ALWAYS">
                     <contextMenu>
                        <ContextMenu>
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#handleEditOption" text="Επεξεργασία" />
                              <MenuItem mnemonicParsing="false" onAction="#itemAddNew" text="Προσθήκη" />
                          </items>
                        </ContextMenu>
                     </contextMenu>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</StackPane>
