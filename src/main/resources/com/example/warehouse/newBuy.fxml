<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.String?>
<StackPane fx:id="stackPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.warehouse.NewBuyController" stylesheets="@external.css">
    <BorderPane minHeight="800.0" minWidth="1200.0">
        <top>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                </BorderPane.margin>
                <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label styleClass="header-label" text="Warehouse v4 - Νέα αγορά" HBox.hgrow="ALWAYS">
                        <font>
                            <Font size="38.0"/>
                        </font>
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </Label>
                </HBox>
                <HBox alignment="CENTER_RIGHT">
                    <opaqueInsets>
                        <Insets right="20.0"/>
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <Button mnemonicParsing="false" onAction="#mainMenuClick" styleClass="click-button"
                            text="Επιστροφή">
                        <graphic>
                            <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true"
                                       preserveRatio="true">
                                <Image url="@icons/menu.png"/>
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </Button>
                </HBox>
            </HBox>
        </top>
        <center>
            <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
                <BorderPane.margin>
                    <Insets/>
                </BorderPane.margin>
                <GridPane alignment="CENTER" VBox.vgrow="NEVER">
                    <columnConstraints>
                        <ColumnConstraints halignment="LEFT" hgrow="NEVER"/>
                        <ColumnConstraints halignment="LEFT" hgrow="NEVER"/>
                        <ColumnConstraints halignment="LEFT" hgrow="NEVER"/>
                        <ColumnConstraints halignment="LEFT" hgrow="NEVER"/>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0"/>
                    </VBox.margin>
                    <Button mnemonicParsing="false" onAction="#addRow" styleClass="click-button"
                            text="Προσθήκη" GridPane.columnIndex="4" GridPane.rowIndex="1">
                        <font>
                            <Font size="24.0"/>
                        </font>
                        <GridPane.margin>
                            <Insets/>
                        </GridPane.margin>
                    </Button>
                    <TextField fx:id="tfUnit" alignment="CENTER" editable="false" prefWidth="200.0"
                               promptText="Μον. Μέτρησης" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <font>
                            <Font size="24.0"/>
                        </font>
                        <GridPane.margin>
                            <Insets left="10.0" right="10.0"/>
                        </GridPane.margin>
                    </TextField>
                    <TextField fx:id="tfQuantity" prefWidth="200.0" promptText="Ποσότητα"
                               GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <font>
                            <Font size="24.0"/>
                        </font>
                        <GridPane.margin>
                            <Insets left="10.0" right="10.0"/>
                        </GridPane.margin>
                    </TextField>
                    <TextField fx:id="tfName" prefWidth="305.0" promptText="Είδος"
                               stylesheets="@external.css" GridPane.rowIndex="1">
                        <GridPane.margin>
                            <Insets left="10.0" right="10.0"/>
                        </GridPane.margin>
                        <font>
                            <Font size="24.0"/>
                        </font>
                        <styleClass>
                            <String fx:value="auto-complete-popup"/>
                            <String fx:value="text-field"/>
                        </styleClass>
                    </TextField>
                    <TextField fx:id="tfInvoice" prefWidth="200.0" promptText="Παραστατικό"
                               stylesheets="@external.css" GridPane.columnIndex="3">
                        <font>
                            <Font size="24.0"/>
                        </font>
                        <styleClass>
                            <String fx:value="auto-complete-popup"/>
                            <String fx:value="text-field"/>
                        </styleClass>
                        <GridPane.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0"/>
                        </GridPane.margin>
                    </TextField>
                    <DatePicker fx:id="tfDate" GridPane.columnIndex="1" GridPane.columnSpan="2">
                        <GridPane.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0"/>
                        </GridPane.margin>
                    </DatePicker>
                    <ComboBox fx:id="tfSupplier" prefWidth="305.0" promptText="Προμηθευτής">
                        <GridPane.margin>
                            <Insets left="10.0" right="10.0"/>
                        </GridPane.margin>
                    </ComboBox>
                    <TextField fx:id="tfPrice" prefWidth="200.0" promptText="Τιμή" GridPane.columnIndex="3"
                               GridPane.rowIndex="1">
                        <font>
                            <Font size="24.0"/>
                        </font>
                        <GridPane.margin>
                            <Insets left="10.0" right="10.0"/>
                        </GridPane.margin>
                    </TextField>
                </GridPane>
                <TableView fx:id="orderTable" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <contextMenu>
                        <ContextMenu>
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#editRow" text="Επεξεργασία"/>
                                <MenuItem mnemonicParsing="false" onAction="#deleteRow" text="Διαγραφή"/>
                            </items>
                        </ContextMenu>
                    </contextMenu>
                </TableView>
                <HBox alignment="CENTER">
                    <Label styleClass="normal-label" text="Σύνολο">
                        <padding>
                            <Insets right="20.0"/>
                        </padding>
                    </Label>
                    <TextField fx:id="tfSum" alignment="CENTER"/>
                </HBox>
                <Button mnemonicParsing="false" onAction="#saveAction" styleClass="click-button"
                        text="Αποθήκευση">
                    <font>
                        <Font size="24.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0"/>
                    </VBox.margin>
                </Button>
            </VBox>
        </center>
    </BorderPane>
</StackPane>
