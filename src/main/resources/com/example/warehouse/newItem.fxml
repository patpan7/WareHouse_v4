<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<DialogPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <graphic>
       <GridPane prefHeight="250.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
           <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
           </columnConstraints>
           <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
           </rowConstraints>

           <Label text="Όνομα:">
            <font>
               <Font size="24.0" />
            </font>
            <padding>
               <Insets left="20.0" />
            </padding></Label>
           <TextField fx:id="tfName" GridPane.columnIndex="1">
            <font>
               <Font size="24.0" />
            </font></TextField>

           <Label text="Τιμή:" GridPane.rowIndex="1">
            <font>
               <Font size="24.0" />
            </font>
            <padding>
               <Insets left="20.0" />
            </padding></Label>
           <TextField fx:id="tfPrice" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <font>
               <Font size="24.0" />
            </font></TextField>

           <Label text="Μονάδα Μέτρησης:" GridPane.rowIndex="2">
            <font>
               <Font size="24.0" />
            </font>
            <padding>
               <Insets left="20.0" />
            </padding></Label>
         <ComboBox fx:id="tfUnit" prefHeight="51.0" prefWidth="250.0" style="-fx-font-size: 24;" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

       </GridPane>
   </graphic>
</DialogPane>
